{
  "manifest_version": 3,
  "name": "HeyDocumentor",
  "version": "1.0.0",
  "description": "Sla emails en bijlagen van Hey.com op in Documentor",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "https://app.hey.com/*",
    "http://localhost:3000/*",
    "http://127.0.0.1:3000/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://app.hey.com/*"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
