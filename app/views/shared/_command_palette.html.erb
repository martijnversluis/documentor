%>

<div data-controller="command-palette"
     data-command-palette-items-value="<%= command_items.to_json %>">

  <div data-command-palette-target="dialog"
       class="hidden fixed inset-0 z-50 overflow-y-auto"
       data-action="click->command-palette#backdropClick">
    <div class="min-h-screen px-4 flex items-start justify-center pt-[20vh]">
      <div class="fixed inset-0 bg-gray-500 bg-opacity-75 transition-opacity"></div>

      <div class="relative bg-white rounded-xl shadow-2xl max-w-lg w-full overflow-hidden">
        <div class="border-b border-gray-200">
          <div class="flex items-center px-4">
            <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
            </svg>
            <input type="text"
                   data-command-palette-target="input"
                   data-action="input->command-palette#filter keydown->command-palette#navigate"
                   class="w-full px-3 py-4 text-sm text-gray-900 placeholder-gray-500 border-0 focus:ring-0 focus:outline-none"
                   placeholder="Zoek een actie...">
            <kbd class="hidden sm:inline-flex px-2 py-1 text-xs text-gray-400 bg-gray-100 rounded">Esc</kbd>
          </div>
        </div>

        <div data-command-palette-target="results"
             class="max-h-80 overflow-y-auto divide-y divide-gray-100">
        </div>

        <div data-command-palette-target="actionForm" class="hidden border-t border-gray-200 p-4">
          <%= form_with url: inbox_action_items_path, method: :post, data: { turbo_frame: "_top" } do %>
            <div class="flex gap-2">
              <input type="text"
                     name="action_item[description]"
                     class="flex-1 px-3 py-2 text-sm border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500"
                     placeholder="Beschrijving van het actiepunt..."
                     data-command-palette-target="actionInput">
              <button type="submit" class="px-4 py-2 bg-blue-600 text-white text-sm font-medium rounded-lg hover:bg-blue-700 cursor-pointer">Toevoegen</button>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
