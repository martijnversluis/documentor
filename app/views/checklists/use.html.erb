<div class="max-w-2xl mx-auto">
  <div class="mb-6">
    <div class="flex items-center space-x-2 text-sm text-gray-500 mb-1">
      <%= link_to "Checklists", checklists_path, class: "hover:text-gray-700" %>
      <span>/</span>
    </div>
    <h1 class="text-2xl font-bold text-gray-900">Checklist gebruiken</h1>
  </div>

  <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
    <div class="mb-6">
      <h2 class="text-lg font-semibold text-gray-900"><%= @checklist.name %></h2>
      <% if @checklist.description.present? %>
        <p class="text-gray-500 mt-1"><%= @checklist.description %></p>
      <% end %>
    </div>

    <div class="mb-6 p-4 bg-gray-50 rounded-lg">
      <h3 class="text-sm font-medium text-gray-700 mb-2">Items die worden aangemaakt:</h3>
      <ul class="space-y-1">
        <% @checklist.checklist_items.each do |item| %>
          <li class="flex items-center gap-2 text-sm text-gray-600">
            <svg class="w-4 h-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4"></path>
            </svg>
            <%= item.description %>
            <% if item.context.present? %>
              <span class="text-xs text-teal-600">@<%= item.context %></span>
            <% end %>
            <% if item.estimated_minutes.present? %>
              <span class="text-xs text-gray-400">(<%= item.estimated_minutes %> min)</span>
            <% end %>
          </li>
        <% end %>
      </ul>
    </div>

    <%= form_with url: apply_checklist_path(@checklist), method: :post, class: "space-y-4" do |f| %>
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-1">Dossier (optioneel)</label>
        <%= render "shared/dossier_select", field_name: "dossier_id", selected_id: nil %>
        <p class="mt-1 text-xs text-gray-500">Laat leeg om items in de inbox te plaatsen</p>
      </div>

      <div>
        <%= f.label :due_date, "Deadline", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.date_field :due_date, value: Date.current, class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
      </div>

      <div class="flex items-center gap-3 pt-4 border-t border-gray-200">
        <%= f.submit "#{@checklist.checklist_items.count} actiepunten aanmaken", class: "px-4 py-2 bg-green-600 text-white font-medium rounded-lg hover:bg-green-700 cursor-pointer" %>
        <%= link_to "Annuleren", checklists_path, class: "px-4 py-2 text-gray-700 hover:text-gray-900" %>
      </div>
    <% end %>
  </div>
</div>
