<div class="checklist-item flex items-center gap-2 p-3 bg-gray-50 rounded-lg" data-checklist-form-target="wrapper">
  <%= f.hidden_field :position %>
  <%= f.hidden_field :_destroy, data: { checklist_form_target: "destroy" } %>
  <%= f.hidden_field :section %>

  <div class="flex-1">
    <%= f.text_field :description, placeholder: "Omschrijving...", class: "w-full px-3 py-2 text-sm border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
  </div>

  <button type="button" data-action="checklist-form#removeItem" class="text-gray-400 hover:text-red-600">
    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
    </svg>
  </button>
</div>
