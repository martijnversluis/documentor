<div class="checklist-item flex items-center gap-2 p-3 bg-gray-50 rounded-lg" data-nested-form-target="wrapper">
  <%= f.hidden_field :position %>
  <%= f.hidden_field :_destroy, data: { nested_form_target: "destroy" } %>

  <div class="flex-1">
    <%= f.text_field :description, placeholder: "Omschrijving...", class: "w-full px-3 py-2 text-sm border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
  </div>

  <div class="w-32">
    <%= f.select :context, TaskContext.ordered.pluck(:name, :name), { include_blank: "Context" }, class: "w-full px-2 py-2 text-sm border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
  </div>

  <div class="w-24">
    <%= f.select :estimated_minutes, ActionItem::DURATION_OPTIONS, { include_blank: "Duur" }, class: "w-full px-2 py-2 text-sm border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
  </div>

  <button type="button" data-action="nested-form#remove" class="text-gray-400 hover:text-red-600">
    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
    </svg>
  </button>
</div>
