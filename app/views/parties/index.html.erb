<div class="space-y-6">
  <div class="flex items-center justify-between">
    <h1 class="text-2xl font-bold text-gray-900">Partijen</h1>
    <%= link_to new_party_path, class: "inline-flex items-center px-4 py-2 bg-blue-600 text-white font-medium rounded-lg hover:bg-blue-700 transition-colors" do %>
      <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
      </svg>
      Nieuwe partij
    <% end %>
  </div>

  <% if @parties.any? %>
    <div class="bg-white rounded-lg shadow-sm border border-gray-200">
      <ul class="divide-y divide-gray-100">
        <% @parties.each do |party| %>
          <li class="flex items-center justify-between px-4 py-3 hover:bg-gray-50">
            <%= link_to party, class: "flex-1" do %>
              <p class="font-medium text-gray-900"><%= party.name %></p>
            <% end %>
            <div class="flex items-center space-x-2">
              <%= link_to edit_party_path(party), class: "text-gray-400 hover:text-gray-600" do %>
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z"></path>
                </svg>
              <% end %>
            </div>
          </li>
        <% end %>
      </ul>
    </div>
  <% else %>
    <div class="text-center py-12 bg-white rounded-lg shadow-sm border border-gray-200">
      <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
      </svg>
      <h3 class="mt-2 text-sm font-medium text-gray-900">Geen partijen</h3>
      <p class="mt-1 text-sm text-gray-500">Voeg partijen toe zoals leveranciers, verzekeraars, etc.</p>
    </div>
  <% end %>
</div>
