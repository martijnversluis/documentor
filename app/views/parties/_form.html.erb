<%= form_with model: party, class: "bg-white rounded-lg shadow-sm border border-gray-200 p-6" do |f| %>
  <% if params[:return_to].present? %>
    <%= hidden_field_tag :return_to, params[:return_to] %>
  <% end %>

  <% if party.errors.any? %>
    <div class="mb-4 bg-red-50 border border-red-200 text-red-700 px-4 py-3 rounded-lg">
      <ul class="list-disc list-inside">
        <% party.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="space-y-4">
    <div>
      <%= f.label :name, "Naam", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.text_field :name, class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent", placeholder: "Naam van de partij", autofocus: true %>
    </div>

    <div>
      <%= f.label :notes, "Notities", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.text_area :notes, rows: 4, class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent", placeholder: "Optionele notities over deze partij" %>
    </div>
  </div>

  <div class="mt-6 flex items-center justify-end space-x-3">
    <%= link_to "Annuleren", params[:return_to].presence || parties_path, class: "px-4 py-2 text-sm font-medium text-gray-700 hover:text-gray-900" %>
    <%= f.submit party.persisted? ? "Opslaan" : "Aanmaken", class: "px-4 py-2 bg-blue-600 text-white font-medium rounded-lg hover:bg-blue-700 transition-colors cursor-pointer" %>
  </div>
<% end %>

<% if party.persisted? %>
  <div class="mt-4 pt-4 border-t border-gray-200">
    <%= button_to "Partij verwijderen", party, method: :delete, data: { turbo_confirm: "Weet je zeker dat je deze partij wilt verwijderen?" }, class: "text-sm font-medium text-red-600 hover:text-red-800" %>
  </div>
<% end %>
