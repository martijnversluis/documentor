<div class="max-w-2xl mx-auto">
  <div class="mb-6">
    <h1 class="text-2xl font-bold text-gray-900">Instellingen</h1>
  </div>

  <div class="bg-white rounded-lg shadow-sm border border-gray-200">
    <div class="px-4 py-3 border-b border-gray-100">
      <h2 class="font-semibold text-gray-900">Contexts</h2>
      <p class="text-sm text-gray-500 mt-1">Beheer de contexts voor je actiepunten (bijv. @telefoon, @computer)</p>
    </div>

    <%# Add new context form %>
    <div class="px-4 py-3 border-b border-gray-100 bg-gray-50">
      <%= form_with model: @new_context, url: settings_contexts_path, scope: :task_context, class: "flex items-center gap-3" do |f| %>
        <span class="text-gray-500">@</span>
        <%= f.text_field :name, placeholder: "Nieuwe context...", class: "flex-1 px-3 py-2 text-sm border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent", autofocus: @new_context.errors.any? %>
        <%= f.submit "Toevoegen", class: "px-4 py-2 text-sm font-medium text-white bg-blue-600 rounded-lg hover:bg-blue-700 cursor-pointer" %>
      <% end %>
      <% if @new_context.errors.any? %>
        <p class="text-sm text-red-600 mt-2"><%= @new_context.errors.full_messages.join(", ") %></p>
      <% end %>
    </div>

    <%# Context list %>
    <% if @contexts.any? %>
      <ul id="contexts-list" class="divide-y divide-gray-100" data-controller="sortable" data-sortable-url-value="<%= reorder_settings_contexts_path %>">
        <% @contexts.each do |context| %>
          <li class="px-4 py-3 flex items-center justify-between group" data-sortable-id="<%= context.id %>">
            <div class="flex items-center gap-3">
              <div class="cursor-move text-gray-400 hover:text-gray-600" data-sortable-handle>
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 8h16M4 16h16"></path>
                </svg>
              </div>
              <span class="text-sm font-medium text-teal-600">@<%= context.name %></span>
            </div>
            <div class="flex items-center gap-2 opacity-0 group-hover:opacity-100 transition-opacity">
              <%= link_to edit_settings_context_path(context), class: "p-1 text-gray-400 hover:text-blue-600" do %>
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                </svg>
              <% end %>
              <%= button_to settings_context_path(context), method: :delete, class: "p-1 text-gray-400 hover:text-red-600", form: { data: { turbo_confirm: "Weet je zeker dat je deze context wilt verwijderen?" } } do %>
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                </svg>
              <% end %>
            </div>
          </li>
        <% end %>
      </ul>
    <% else %>
      <div class="px-4 py-8 text-center text-gray-500">
        <p>Nog geen contexts. Voeg er een toe hierboven.</p>
      </div>
    <% end %>
  </div>
</div>
