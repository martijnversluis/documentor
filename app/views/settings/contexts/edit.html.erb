<div class="max-w-2xl mx-auto">
  <div class="mb-6">
    <h1 class="text-2xl font-bold text-gray-900">Context bewerken</h1>
  </div>

  <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
    <%= form_with model: @context, url: settings_context_path(@context), method: :patch do |f| %>
      <div class="mb-4">
        <label class="block text-sm font-medium text-gray-700 mb-1">Naam</label>
        <div class="flex items-center gap-2">
          <span class="text-gray-500">@</span>
          <%= f.text_field :name, class: "flex-1 px-3 py-2 text-sm border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent", autofocus: true %>
        </div>
        <% if @context.errors[:name].any? %>
          <p class="text-sm text-red-600 mt-1"><%= @context.errors[:name].join(", ") %></p>
        <% end %>
      </div>

      <div class="flex items-center justify-between">
        <%= link_to "Annuleren", settings_contexts_path, class: "text-sm text-gray-600 hover:text-gray-900" %>
        <%= f.submit "Opslaan", class: "px-4 py-2 text-sm font-medium text-white bg-blue-600 rounded-lg hover:bg-blue-700 cursor-pointer" %>
      </div>
    <% end %>
  </div>
</div>
