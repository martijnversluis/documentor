<%= turbo_stream.replace @google_calendar do %>
  <li id="<%= dom_id(@google_calendar) %>" class="px-4 py-3 flex items-center justify-between">
    <div class="flex items-center gap-3">
      <span class="w-3 h-3 rounded-full" style="background-color: <%= @google_calendar.color %>"></span>
      <span class="text-sm font-medium text-gray-900"><%= @google_calendar.name %></span>
    </div>
    <%= form_with model: [@google_account, @google_calendar], url: settings_google_account_google_calendar_path(@google_account, @google_calendar), method: :patch, data: { turbo_stream: true } do |f| %>
      <label class="relative inline-flex items-center cursor-pointer">
        <%= f.check_box :enabled,
            class: "sr-only peer",
            onchange: "this.form.requestSubmit()" %>
        <div class="w-11 h-6 bg-gray-200 peer-focus:outline-none peer-focus:ring-4 peer-focus:ring-blue-300 rounded-full peer peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:border-gray-300 after:border after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:bg-blue-600"></div>
      </label>
    <% end %>
  </li>
<% end %>
