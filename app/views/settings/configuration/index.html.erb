<div class="max-w-2xl mx-auto">
  <div class="mb-6">
    <h1 class="text-2xl font-bold text-gray-900">Configuratie</h1>
    <p class="text-sm text-gray-500 mt-1">Configureer OAuth credentials voor Google en GitHub integraties</p>
  </div>

  <%= form_tag settings_configuration_index_path, method: :patch, class: "space-y-6" do %>
    <div class="bg-white rounded-lg shadow-sm border border-gray-200">
      <div class="px-4 py-3 border-b border-gray-100">
        <h2 class="font-semibold text-gray-900">Google OAuth</h2>
        <p class="text-sm text-gray-500">Voor Calendar en Gmail integratie</p>
      </div>

      <div class="p-4 space-y-4">
        <div>
          <%= label_tag :google_client_id, "Client ID", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= text_field_tag :google_client_id, @google_client_id, class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent font-mono text-sm", placeholder: "xxx.apps.googleusercontent.com" %>
        </div>
        <div>
          <%= label_tag :google_client_secret, "Client Secret", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= password_field_tag :google_client_secret, @google_client_secret, class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent font-mono text-sm", placeholder: "GOCSPX-xxx" %>
        </div>
        <p class="text-xs text-gray-500">
          Maak credentials aan via de
          <a href="https://console.cloud.google.com/apis/credentials" target="_blank" class="text-blue-600 hover:underline">Google Cloud Console</a>
        </p>
      </div>
    </div>

    <div class="bg-white rounded-lg shadow-sm border border-gray-200">
      <div class="px-4 py-3 border-b border-gray-100">
        <h2 class="font-semibold text-gray-900">GitHub OAuth</h2>
        <p class="text-sm text-gray-500">Voor GitHub integratie</p>
      </div>

      <div class="p-4 space-y-4">
        <div>
          <%= label_tag :github_client_id, "Client ID", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= text_field_tag :github_client_id, @github_client_id, class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent font-mono text-sm", placeholder: "Ov23li..." %>
        </div>
        <div>
          <%= label_tag :github_client_secret, "Client Secret", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= password_field_tag :github_client_secret, @github_client_secret, class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent font-mono text-sm", placeholder: "xxx" %>
        </div>
        <p class="text-xs text-gray-500">
          Maak een OAuth App aan via
          <a href="https://github.com/settings/developers" target="_blank" class="text-blue-600 hover:underline">GitHub Developer Settings</a>
        </p>
      </div>
    </div>

    <div class="flex justify-end">
      <%= submit_tag "Opslaan", class: "px-4 py-2 bg-blue-600 text-white text-sm font-medium rounded-lg hover:bg-blue-700 cursor-pointer" %>
    </div>
  <% end %>
</div>
