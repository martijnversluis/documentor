<div class="max-w-2xl mx-auto">
  <div class="mb-6">
    <h1 class="text-2xl font-bold text-gray-900">Instellingen</h1>
  </div>

  <div class="bg-white rounded-lg shadow-sm border border-gray-200">
    <div class="px-4 py-3 border-b border-gray-100 flex items-center justify-between">
      <div>
        <h2 class="font-semibold text-gray-900">Google Agenda's</h2>
        <p class="text-sm text-gray-500 mt-1">Koppel Google accounts om agenda-items te zien</p>
      </div>
      <%= button_to settings_google_accounts_path, method: :post, data: { turbo: false }, class: "inline-flex items-center gap-2 px-4 py-2 text-sm font-medium text-white bg-blue-600 rounded-lg hover:bg-blue-700 cursor-pointer" do %>
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
        </svg>
        Account toevoegen
      <% end %>
    </div>

    <% if @google_accounts.any? %>
      <ul class="divide-y divide-gray-100">
        <% @google_accounts.each do |account| %>
          <li class="px-4 py-4">
            <div class="flex items-start justify-between">
              <div class="flex items-center gap-3">
                <div class="w-10 h-10 rounded-full bg-gradient-to-br from-blue-500 to-green-500 flex items-center justify-center text-white font-medium">
                  <%= account.email[0].upcase %>
                </div>
                <div>
                  <p class="font-medium text-gray-900"><%= account.name || account.email %></p>
                  <p class="text-sm text-gray-500"><%= account.email %></p>
                </div>
              </div>
              <div class="flex items-center gap-2">
                <%= link_to settings_google_account_google_calendars_path(account), class: "p-2 text-gray-400 hover:text-blue-600" do %>
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                  </svg>
                <% end %>
                <%= button_to settings_google_account_path(account), method: :delete, class: "p-2 text-gray-400 hover:text-red-600", form: { data: { turbo_confirm: "Weet je zeker dat je dit account wilt ontkoppelen?" } } do %>
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                  </svg>
                <% end %>
              </div>
            </div>

            <%# Show enabled calendars %>
            <% enabled_calendars = account.google_calendars.enabled %>
            <% if enabled_calendars.any? %>
              <div class="mt-3 flex flex-wrap gap-2">
                <% enabled_calendars.each do |calendar| %>
                  <span class="inline-flex items-center gap-1.5 px-2 py-1 text-xs rounded-full" style="background-color: <%= calendar.color %>20; color: <%= calendar.color %>">
                    <span class="w-2 h-2 rounded-full" style="background-color: <%= calendar.color %>"></span>
                    <%= calendar.name %>
                  </span>
                <% end %>
              </div>
            <% else %>
              <p class="mt-3 text-sm text-gray-400">Geen agenda's geselecteerd</p>
            <% end %>
          </li>
        <% end %>
      </ul>
    <% else %>
      <div class="px-4 py-12 text-center text-gray-500">
        <svg class="w-12 h-12 mx-auto mb-4 text-gray-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
        </svg>
        <p class="mb-2">Nog geen Google accounts gekoppeld</p>
        <p class="text-sm">Klik op "Account toevoegen" om te beginnen</p>
      </div>
    <% end %>
  </div>
</div>
