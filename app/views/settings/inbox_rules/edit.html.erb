<div class="max-w-2xl mx-auto">
  <div class="mb-6">
    <h1 class="text-2xl font-bold text-gray-900">Regel bewerken</h1>
  </div>

  <div class="bg-white rounded-lg shadow-sm border border-gray-200">
    <div class="px-4 py-4">
      <%= form_with model: @inbox_rule, url: settings_inbox_rule_path(@inbox_rule), class: "space-y-4" do |f| %>
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">Zoekterm</label>
          <%= f.text_field :term, class: "w-full px-3 py-2 text-sm border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
          <% if @inbox_rule.errors[:term].any? %>
            <p class="text-sm text-red-600 mt-1"><%= @inbox_rule.errors[:term].join(", ") %></p>
          <% end %>
        </div>

        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">Dossier</label>
          <%= render "shared/dossier_select",
              field_name: "inbox_rule[dossier_id]",
              selected_id: @inbox_rule.dossier_id,
              include_blank: nil,
              show_all: true,
              input_class: "w-full" %>
          <% if @inbox_rule.errors[:dossier].any? %>
            <p class="text-sm text-red-600 mt-1"><%= @inbox_rule.errors[:dossier].join(", ") %></p>
          <% end %>
        </div>

        <div>
          <label class="flex items-center gap-2 text-sm text-gray-600">
            <input type="checkbox" name="apply_to_inbox" value="1" class="rounded border-gray-300 text-blue-600 focus:ring-blue-500">
            <span>Toepassen op huidige inbox items</span>
          </label>
        </div>

        <div class="flex items-center gap-3 pt-2">
          <%= f.submit "Opslaan", class: "px-4 py-2 text-sm font-medium text-white bg-blue-600 rounded-lg hover:bg-blue-700 cursor-pointer" %>
          <%= link_to "Annuleren", settings_inbox_rules_path, class: "px-4 py-2 text-sm font-medium text-gray-700 hover:text-gray-900" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
