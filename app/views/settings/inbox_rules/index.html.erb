<div class="max-w-2xl mx-auto">
  <div class="mb-6">
    <h1 class="text-2xl font-bold text-gray-900">Instellingen</h1>
  </div>

  <div class="bg-white rounded-lg shadow-sm border border-gray-200">
    <div class="px-4 py-3 border-b border-gray-100">
      <h2 class="font-semibold text-gray-900">Inbox regels</h2>
      <p class="text-sm text-gray-500 mt-1">Automatisch inbox items toewijzen aan dossiers op basis van termen in de beschrijving</p>
    </div>

    <%# Add new rule form %>
    <div class="px-4 py-3 border-b border-gray-100 bg-gray-50">
      <%= form_with model: @new_rule, url: settings_inbox_rules_path, class: "flex items-center gap-3 flex-wrap" do |f| %>
        <%= f.text_field :term, placeholder: "Zoekterm...", class: "w-48 px-3 py-2 text-sm border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent", autofocus: @new_rule.errors.any? %>
        <svg class="w-4 h-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
        </svg>
        <%= render "shared/dossier_select",
            field_name: "inbox_rule[dossier_id]",
            selected_id: @new_rule.dossier_id,
            include_blank: "Kies dossier...",
            show_all: true,
            input_class: "w-64" %>
        <label class="flex items-center gap-1.5 text-sm text-gray-600">
          <input type="checkbox" name="apply_to_inbox" value="1" class="rounded border-gray-300 text-blue-600 focus:ring-blue-500">
          <span>Toepassen op inbox</span>
        </label>
        <%= f.submit "Toevoegen", class: "px-4 py-2 text-sm font-medium text-white bg-blue-600 rounded-lg hover:bg-blue-700 cursor-pointer" %>
      <% end %>
      <% if @new_rule.errors.any? %>
        <p class="text-sm text-red-600 mt-2"><%= @new_rule.errors.full_messages.join(", ") %></p>
      <% end %>
    </div>

    <%# Rules list %>
    <% if @inbox_rules.any? %>
      <ul class="divide-y divide-gray-100">
        <% @inbox_rules.each do |rule| %>
          <li class="px-4 py-3 flex items-center justify-between group">
            <div class="flex items-center gap-3">
              <span class="text-sm font-medium text-gray-900 bg-gray-100 px-2 py-1 rounded"><%= rule.term %></span>
              <svg class="w-4 h-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
              </svg>
              <span class="text-sm text-gray-600"><%= rule.dossier.name %></span>
            </div>
            <div class="flex items-center gap-2 opacity-0 group-hover:opacity-100 transition-opacity">
              <%= link_to edit_settings_inbox_rule_path(rule), class: "p-1 text-gray-400 hover:text-blue-600" do %>
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                </svg>
              <% end %>
              <%= button_to settings_inbox_rule_path(rule), method: :delete, class: "p-1 text-gray-400 hover:text-red-600", form: { data: { turbo_confirm: "Weet je zeker dat je deze regel wilt verwijderen?" } } do %>
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                </svg>
              <% end %>
            </div>
          </li>
        <% end %>
      </ul>
    <% else %>
      <div class="px-4 py-8 text-center text-gray-500">
        <p>Nog geen regels. Voeg er een toe hierboven.</p>
      </div>
    <% end %>
  </div>
</div>
