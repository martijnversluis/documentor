<%= turbo_frame_tag "modal" do %>
  <div class="fixed inset-0 bg-gray-500 bg-opacity-75 flex items-center justify-center z-50">
    <div class="bg-white rounded-lg shadow-xl max-w-md w-full mx-4">
      <div class="p-6">
        <h2 class="text-lg font-semibold text-gray-900 mb-4">Nieuwe map</h2>

        <%= form_with model: [@dossier, @folder], class: "space-y-4", data: { turbo_frame: "_top" } do |f| %>
          <div>
            <%= f.label :name, "Naam", class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= f.text_field :name, class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent", placeholder: "Naam van de map", autofocus: true %>
          </div>

          <div class="flex justify-end space-x-3 pt-4">
            <%= link_to "Annuleren", @dossier, class: "px-4 py-2 text-sm font-medium text-gray-700 hover:text-gray-900" %>
            <%= f.submit "Aanmaken", class: "px-4 py-2 bg-blue-600 text-white font-medium rounded-lg hover:bg-blue-700 transition-colors cursor-pointer" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
<% end %>
