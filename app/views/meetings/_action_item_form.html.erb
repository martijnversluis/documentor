<%= form_with model: [meeting, action_item], class: "flex items-center gap-2" do |f| %>
  <div class="flex-1">
    <%= f.text_field :description,
      placeholder: "Nieuw actiepunt toevoegen...",
      class: "w-full px-3 py-2 text-sm border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent",
      autofocus: action_item.errors.any? %>
  </div>
  <%= f.submit "Toevoegen", class: "px-3 py-2 bg-blue-600 text-white text-sm font-medium rounded-lg hover:bg-blue-700 transition-colors cursor-pointer" %>
<% end %>
