<div class="max-w-4xl mx-auto px-4 py-8">
  <h1 class="text-2xl font-bold text-gray-900 mb-6">Meetings</h1>

  <% if @meetings.any? %>
    <div class="bg-white rounded-xl shadow-sm border border-gray-200 divide-y divide-gray-100">
      <% @meetings.each do |meeting| %>
        <%= link_to meeting, class: "block p-4 hover:bg-gray-50 transition-colors" do %>
          <div class="flex items-start justify-between">
            <div class="flex-1 min-w-0">
              <h3 class="font-medium text-gray-900 truncate"><%= meeting.title %></h3>
              <p class="text-sm text-gray-500 mt-1">
                <%= l(meeting.start_time, format: :long) %>
              </p>
              <% if meeting.notes.present? %>
                <p class="text-sm text-gray-600 mt-2 line-clamp-2"><%= truncate(meeting.notes, length: 150) %></p>
              <% end %>
              <% if meeting.action_items.any? %>
                <div class="flex items-center gap-2 mt-2">
                  <span class="inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                    <%= meeting.action_items.count %> actiepunt<%= meeting.action_items.count == 1 ? '' : 'en' %>
                  </span>
                  <% pending_count = meeting.action_items.pending.count %>
                  <% if pending_count > 0 %>
                    <span class="inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium bg-amber-100 text-amber-800">
                      <%= pending_count %> open
                    </span>
                  <% end %>
                </div>
              <% end %>
            </div>
            <svg class="w-5 h-5 text-gray-400 flex-shrink-0 ml-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
            </svg>
          </div>
        <% end %>
      <% end %>
    </div>
  <% else %>
    <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-8 text-center">
      <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
      </svg>
      <h3 class="mt-2 text-sm font-medium text-gray-900">Geen meetings met inhoud</h3>
      <p class="mt-1 text-sm text-gray-500">Klik op een lopende meeting in de agenda om notities te maken.</p>
    </div>
  <% end %>
</div>
