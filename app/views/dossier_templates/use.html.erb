<div class="max-w-2xl mx-auto">
  <div class="mb-6">
    <div class="flex items-center space-x-2 text-sm text-gray-500 mb-1">
      <%= link_to "Templates", dossier_templates_path, class: "hover:text-gray-700" %>
      <span>/</span>
      <span><%= @dossier_template.name %></span>
    </div>
    <h1 class="text-2xl font-bold text-gray-900">Nieuw dossier aanmaken</h1>
    <p class="text-sm text-gray-500 mt-1">Vanuit template "<%= @dossier_template.name %>"</p>
  </div>

  <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
    <%= form_with url: apply_dossier_template_path(@dossier_template), method: :post do |f| %>
      <div class="space-y-4">
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">Naam van het dossier</label>
          <%= f.text_field :name, name: "dossier[name]", class: "w-full px-3 py-2 text-sm border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent", placeholder: "Bijv. Project XYZ", autofocus: true %>
        </div>

        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">Beschrijving</label>
          <%= f.text_area :description, name: "dossier[description]", rows: 3, class: "w-full px-3 py-2 text-sm border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent", placeholder: "Optionele beschrijving" %>
        </div>

        <div class="border-t border-gray-100 pt-4">
          <h3 class="text-sm font-medium text-gray-700 mb-3">Dit wordt aangemaakt:</h3>

          <% if @dossier_template.folders_data.any? %>
            <div class="mb-3">
              <p class="text-xs text-gray-500 uppercase tracking-wide mb-1">Mappen</p>
              <ul class="space-y-1">
                <% @dossier_template.folders_data.each do |folder| %>
                  <li class="flex items-center gap-2 text-sm text-gray-600">
                    <svg class="w-4 h-4 text-yellow-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2h-6l-2-2H5a2 2 0 00-2 2z"></path>
                    </svg>
                    <%= folder["name"] %>
                  </li>
                <% end %>
              </ul>
            </div>
          <% end %>

          <% if @dossier_template.action_items_data.any? %>
            <div>
              <p class="text-xs text-gray-500 uppercase tracking-wide mb-1">Actiepunten</p>
              <ul class="space-y-1">
                <% @dossier_template.action_items_data.each do |item| %>
                  <li class="flex items-center gap-2 text-sm text-gray-600">
                    <svg class="w-4 h-4 text-purple-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"></path>
                    </svg>
                    <%= item["description"] %>
                    <% if item["context"] %>
                      <span class="text-xs text-teal-600">@<%= item["context"] %></span>
                    <% end %>
                  </li>
                <% end %>
              </ul>
            </div>
          <% end %>
        </div>

        <div class="flex items-center justify-end gap-3 pt-4 border-t border-gray-100">
          <%= link_to "Annuleren", dossier_templates_path, class: "px-4 py-2 text-sm font-medium text-gray-700 hover:text-gray-900" %>
          <%= f.submit "Dossier aanmaken", class: "px-4 py-2 bg-green-600 text-white text-sm font-medium rounded-lg hover:bg-green-700 transition-colors cursor-pointer" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
