<%= form_with model: expiring_item, class: "space-y-4" do |f| %>
  <div>
    <%= f.label :name, "Naam", class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= f.text_field :name, class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent", placeholder: "Bijv: Rijbewijs, Paspoort, ID-kaart...", autofocus: true %>
  </div>

  <div>
    <%= f.label :expires_at, "Vervaldatum", class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= f.date_field :expires_at, class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
  </div>

  <div>
    <%= f.label :notify_days_before, "Herinnering", class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= f.select :notify_days_before, [
      ["7 dagen van tevoren", 7],
      ["14 dagen van tevoren", 14],
      ["30 dagen van tevoren", 30],
      ["60 dagen van tevoren", 60],
      ["90 dagen van tevoren", 90],
      ["180 dagen van tevoren", 180]
    ], {}, class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
    <p class="mt-1 text-xs text-gray-500">Wanneer moet er een actiepunt worden aangemaakt?</p>
  </div>

  <div>
    <%= f.label :description, "Notities", class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= f.text_area :description, rows: 3, class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent", placeholder: "Bijv: Vernieuwen bij gemeente, kosten â‚¬75...", data: { controller: "markdown-paste" } %>
    <p class="mt-1 text-xs text-gray-500">Markdown ondersteund</p>
  </div>

  <div class="flex items-center gap-3 pt-4 border-t border-gray-200">
    <%= f.submit expiring_item.persisted? ? "Opslaan" : "Toevoegen", class: "px-4 py-2 bg-blue-600 text-white font-medium rounded-lg hover:bg-blue-700 cursor-pointer" %>
    <%= link_to "Annuleren", expiring_items_path, class: "px-4 py-2 text-gray-700 hover:text-gray-900" %>
  </div>
<% end %>
