<div class="p-4 hover:bg-white/50 group">
  <div class="flex items-start justify-between">
    <div class="flex-1">
      <div class="flex items-center gap-3">
        <h3 class="font-medium text-gray-900"><%= item.name %></h3>
        <span class="text-sm <%= item.expired? ? 'text-red-600 font-medium' : item.expiring_soon? ? 'text-orange-600' : 'text-gray-500' %>">
          <% if item.expired? %>
            <%= item.days_until_expiration.abs %> dagen geleden verlopen
          <% elsif item.days_until_expiration == 0 %>
            Verloopt vandaag
          <% elsif item.days_until_expiration == 1 %>
            Verloopt morgen
          <% else %>
            Nog <%= item.days_until_expiration %> dagen
          <% end %>
        </span>
      </div>
      <p class="text-sm text-gray-500 mt-1">
        Vervaldatum: <%= item.expires_at.strftime("%d-%m-%Y") %>
        <% if item.notify_days_before && item.notify_days_before != 30 %>
          &middot; Herinnering <%= item.notify_days_before %> dagen van tevoren
        <% end %>
      </p>
      <% if item.description.present? %>
        <p class="text-sm text-gray-600 mt-2 prose prose-sm max-w-none"><%= markdown(item.description) %></p>
      <% end %>
    </div>
    <div class="flex items-center gap-2 opacity-0 group-hover:opacity-100 transition-opacity">
      <%= link_to edit_expiring_item_path(item), class: "text-gray-400 hover:text-blue-600" do %>
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
        </svg>
      <% end %>
      <%= button_to expiring_item_path(item), method: :delete, class: "text-gray-400 hover:text-red-600", data: { turbo_confirm: "Weet je zeker dat je dit item wilt verwijderen?" } do %>
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
        </svg>
      <% end %>
    </div>
  </div>
</div>
