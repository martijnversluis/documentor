<div class="max-w-6xl mx-auto">
  <div class="flex items-center justify-between mb-8">
    <div>
      <h1 class="text-2xl font-bold text-gray-900">Reviews</h1>
      <p class="text-sm text-gray-500 mt-1">GTD reviews voor <%= @year %></p>
    </div>
    <div class="flex items-center gap-4">
      <%= link_to reviews_path(year: @year - 1), class: "p-2 text-gray-400 hover:text-gray-600 hover:bg-gray-100 rounded-lg" do %>
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
        </svg>
      <% end %>
      <span class="font-semibold text-gray-900"><%= @year %></span>
      <%= link_to reviews_path(year: @year + 1), class: "p-2 text-gray-400 hover:text-gray-600 hover:bg-gray-100 rounded-lg" do %>
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
        </svg>
      <% end %>
    </div>
  </div>

  <!-- Daily reviews -->
  <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-6">
    <% %w[daily_start daily_end].each do |type| %>
      <% data = @current_reviews[type] %>
      <%= render "review_card", type: type, review: data[:review], template: data[:template] %>
    <% end %>
  </div>

  <!-- Periodic reviews -->
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4 mb-8">
    <% %w[weekly monthly quarterly yearly].each do |type| %>
      <% data = @current_reviews[type] %>
      <%= render "review_card", type: type, review: data[:review], template: data[:template] %>
    <% end %>
  </div>

  <!-- Habit tracker -->
  <%= render "calendar", habit_data: @habit_data, year: @year %>

  <!-- Settings link -->
  <div class="mt-8 text-center">
    <%= link_to "Review templates beheren", review_templates_path, class: "text-sm text-gray-500 hover:text-gray-700" %>
  </div>
</div>
