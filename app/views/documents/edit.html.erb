<%= turbo_frame_tag "modal" do %>
  <div class="fixed inset-0 bg-gray-500 bg-opacity-75 flex items-center justify-center z-50">
    <div class="bg-white rounded-lg shadow-xl max-w-lg w-full mx-4 overflow-visible">
      <div class="p-6 overflow-visible">
        <h2 class="text-lg font-semibold text-gray-900 mb-4">Document bewerken</h2>

        <%= form_with model: @document, class: "space-y-4", data: { turbo_frame: "_top" } do |f| %>
          <div>
            <%= f.label :name, "Naam", class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= f.text_field :name, class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent", autofocus: true %>
          </div>

          <div>
            <%= f.label :occurred_at, "Datum", class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= f.datetime_local_field :occurred_at, value: @document.occurred_at&.strftime("%Y-%m-%dT%H:%M"), class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
          </div>

          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">Dossier</label>
            <%= render "shared/dossier_select",
                field_name: "document[dossier_id]",
                selected_id: @document.folder&.dossier_id || @document.dossier_id %>
          </div>

          <% if @document.file.attached? %>
            <div class="text-sm text-gray-500">
              Huidig bestand: <%= @document.file.filename %> (<%= number_to_human_size(@document.file.byte_size) %>)
            </div>
          <% end %>

          <div>
            <%= f.label :tag_list, "Tags", class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= f.text_field :tag_list, value: @document.tag_list, class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent", placeholder: "tag1, tag2, tag3" %>
            <p class="mt-1 text-xs text-gray-500">Scheid tags met een komma</p>
          </div>

          <div>
            <%= f.label :remarks, "Opmerking", class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= f.text_area :remarks, rows: 3, class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent", placeholder: "Optionele opmerking", data: { controller: "markdown-paste" } %>
          </div>

          <div class="border-t border-gray-200 pt-4 mt-4">
            <h3 class="text-sm font-medium text-gray-700 mb-3">Verloopdatum</h3>
            <div class="space-y-3">
              <div>
                <%= f.label :expires_at, "Verloopt op", class: "block text-sm font-medium text-gray-700 mb-1" %>
                <%= f.date_field :expires_at, class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
              </div>
              <div>
                <%= f.label :expiration_description, "Wat moet er gebeuren?", class: "block text-sm font-medium text-gray-700 mb-1" %>
                <%= f.text_area :expiration_description, rows: 2, class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent", placeholder: "Bijv: Paspoort vernieuwen bij gemeente", data: { controller: "markdown-paste" } %>
                <p class="mt-1 text-xs text-gray-500">Markdown ondersteund</p>
              </div>
            </div>
          </div>

          <div class="flex justify-end space-x-3 pt-4">
            <%= link_to "Annuleren", @document.folder&.dossier || @document.dossier, class: "px-4 py-2 text-sm font-medium text-gray-700 hover:text-gray-900", data: { turbo_frame: "_top" } %>
            <%= f.submit "Opslaan", class: "px-4 py-2 bg-blue-600 text-white font-medium rounded-lg hover:bg-blue-700 transition-colors cursor-pointer" %>
          </div>
        <% end %>

        <div class="border-t border-gray-200 mt-4 pt-4">
          <%= render "party_links/party_links", linkable: @document, dropdown_up: true %>
        </div>

        <div class="border-t border-gray-200 mt-4 pt-4">
          <%= button_to "Document verwijderen", @document, method: :delete, form: { data: { turbo_frame: "_top" } }, data: { turbo_confirm: "Weet je zeker dat je dit document wilt verwijderen?" }, class: "w-full px-4 py-2 text-sm font-medium text-red-600 hover:text-red-800 hover:bg-red-50 rounded-lg transition-colors" %>
        </div>
      </div>
    </div>
  </div>
<% end %>
