<% all_completed = dossier.all_action_items_completed? %>
<div class="relative"
     draggable="true"
     data-dossier-merge-target="item"
     data-dossier-id="<%= dossier.id %>"
     data-action="dragstart->dossier-merge#dragStart dragend->dossier-merge#dragEnd dragover->dossier-merge#dragOver dragleave->dossier-merge#dragLeave drop->dossier-merge#drop">
  <%= link_to dossier, class: "block bg-white rounded-lg shadow-sm border border-gray-200 p-4 hover:shadow-md transition-shadow #{all_completed ? 'opacity-50' : ''}" do %>
  <div class="flex items-start">
    <div class="flex-shrink-0">
      <svg class="w-8 h-8 <%= all_completed ? 'text-gray-400' : 'text-blue-500' %>" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2h-6l-2-2H5a2 2 0 00-2 2z"></path>
      </svg>
    </div>
    <div class="ml-3 flex-1 min-w-0">
      <p class="text-sm font-medium <%= all_completed ? 'text-gray-500' : 'text-gray-900' %> truncate"><%= dossier.name %></p>
      <% if dossier.description.present? %>
        <div class="text-sm text-gray-500 line-clamp-2 prose prose-sm max-w-none prose-p:my-0"><%= markdown(dossier.description) %></div>
      <% end %>
      <div class="mt-2 flex items-center text-xs text-gray-400">
        <span><%= dossier.folders.count %> mappen</span>
        <span class="mx-2">&middot;</span>
        <span><%= dossier.documents.count + dossier.notes.count %> items</span>
        <% if all_completed %>
          <span class="mx-2">&middot;</span>
          <span class="text-green-600 flex items-center gap-1">
            <svg class="w-3 h-3" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
            </svg>
            Afgerond
          </span>
        <% end %>
      </div>
    </div>
  </div>
  <% end %>
</div>
