<%= form_with model: dossier, class: "bg-white rounded-lg shadow-sm border border-gray-200 p-6" do |f| %>
  <% if dossier.errors.any? %>
    <div class="mb-4 bg-red-50 border border-red-200 text-red-700 px-4 py-3 rounded-lg">
      <ul class="list-disc list-inside">
        <% dossier.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="space-y-4">
    <div>
      <%= f.label :name, "Naam", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.text_field :name, class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent", placeholder: "Naam van het dossier" %>
    </div>

    <div>
      <%= f.label :description, "Beschrijving", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.text_area :description, rows: 3, class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent", placeholder: "Optionele beschrijving" %>
    </div>

    <div class="flex items-center gap-2">
      <%= f.check_box :work_dossier, class: "w-4 h-4 text-blue-600 border-gray-300 rounded focus:ring-blue-500" %>
      <%= f.label :work_dossier, "Werkdossier", class: "text-sm font-medium text-gray-700" %>
      <span class="text-xs text-gray-500">(verborgen buiten werkmodus)</span>
    </div>
  </div>

  <div class="mt-6 flex items-center justify-end space-x-3">
    <%= link_to "Annuleren", dossier.persisted? ? dossier : dossiers_path, class: "px-4 py-2 text-sm font-medium text-gray-700 hover:text-gray-900" %>
    <%= f.submit dossier.persisted? ? "Opslaan" : "Aanmaken", class: "px-4 py-2 bg-blue-600 text-white font-medium rounded-lg hover:bg-blue-700 transition-colors cursor-pointer" %>
  </div>
<% end %>
