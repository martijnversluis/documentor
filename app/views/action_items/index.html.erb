<% content_for :return_path do %>
  <% case @current_filter
     when :today then today_action_items_path
     when :tomorrow then tomorrow_action_items_path
     when :yesterday then yesterday_action_items_path
     when :overdue then overdue_action_items_path
     when :waiting then waiting_action_items_path
     when :someday then someday_action_items_path
     when :next_actions then next_actions_action_items_path
     when :quick_wins then quick_wins_action_items_path
     when :recurring then recurring_action_items_path
     when :inbox then filter_inbox_action_items_path
     end %>
<% end %>

<div class="max-w-4xl mx-auto" data-controller="action-items-drop" data-action-items-drop-url-value="<%= today_action_items_path %>">
  <div class="flex items-center justify-between mb-6">
    <h1 class="text-2xl font-bold text-gray-900">Actiepunten</h1>
    <div class="flex items-center gap-2">
      <%= link_to current_action_items_path, class: "inline-flex items-center gap-2 px-3 py-1.5 text-sm font-medium text-purple-700 bg-purple-100 rounded-lg hover:bg-purple-200 transition-colors" do %>
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
        </svg>
        Weekoverzicht
      <% end %>
      <%= link_to current_month_action_items_path, class: "inline-flex items-center gap-2 px-3 py-1.5 text-sm font-medium text-purple-700 bg-purple-100 rounded-lg hover:bg-purple-200 transition-colors" do %>
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
        </svg>
        Maandoverzicht
      <% end %>
    </div>
  </div>

  <div class="flex flex-wrap gap-2 mb-4">
    <%= link_to today_action_items_path, class: "px-3 py-1.5 text-sm font-medium rounded-full inline-flex items-center gap-1 #{@current_filter == :today ? 'bg-blue-600 text-white ring-2 ring-blue-600 ring-offset-2' : 'bg-blue-100 text-blue-700 hover:bg-blue-200'}", data: { due_date: "today" } do %>
      <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
      </svg>
      Vandaag (<span id="today-count"><%= @today_count %></span>)
    <% end %>
    <%= link_to tomorrow_action_items_path, class: "px-3 py-1.5 text-sm font-medium rounded-full inline-flex items-center gap-1 #{@current_filter == :tomorrow ? 'bg-sky-600 text-white ring-2 ring-sky-600 ring-offset-2' : 'bg-sky-100 text-sky-700 hover:bg-sky-200'}", data: { due_date: "tomorrow" } do %>
      <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
      </svg>
      Morgen (<span id="tomorrow-count"><%= @tomorrow_count %></span>)
    <% end %>
    <%= link_to yesterday_action_items_path, class: "px-3 py-1.5 text-sm font-medium rounded-full inline-flex items-center gap-1 #{@current_filter == :yesterday ? 'bg-violet-600 text-white ring-2 ring-violet-600 ring-offset-2' : 'bg-violet-100 text-violet-700 hover:bg-violet-200'}" do %>
      <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
      </svg>
      Gisteren (<span id="yesterday-count"><%= @yesterday_count %></span>)
    <% end %>
    <%= link_to overdue_action_items_path, class: "px-3 py-1.5 text-sm font-medium rounded-full inline-flex items-center gap-1 #{@current_filter == :overdue ? 'bg-red-600 text-white ring-2 ring-red-600 ring-offset-2' : 'bg-red-100 text-red-700 hover:bg-red-200'}" do %>
      <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
      </svg>
      Verlopen (<span id="overdue-count"><%= @overdue_count %></span>)
    <% end %>
    <%= link_to next_actions_action_items_path, class: "px-3 py-1.5 text-sm font-medium rounded-full inline-flex items-center gap-1 #{@current_filter == :next_actions ? 'bg-gray-900 text-white ring-2 ring-gray-900 ring-offset-2' : 'bg-gray-200 text-gray-700 hover:bg-gray-300'}" do %>
      <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 5l7 7-7 7M5 5l7 7-7 7"></path>
      </svg>
      Eerstvolgende (<span id="next-count"><%= @next_count %></span>)
    <% end %>
    <%= link_to waiting_action_items_path, class: "px-3 py-1.5 text-sm font-medium rounded-full inline-flex items-center gap-1 #{@current_filter == :waiting ? 'bg-orange-600 text-white ring-2 ring-orange-600 ring-offset-2' : 'bg-orange-100 text-orange-700 hover:bg-orange-200'}" do %>
      <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
      </svg>
      Wachten op (<span id="waiting-count"><%= @waiting_count %></span>)
    <% end %>
    <%= link_to someday_action_items_path, class: "px-3 py-1.5 text-sm font-medium rounded-full inline-flex items-center gap-1 #{@current_filter == :someday ? 'bg-indigo-600 text-white ring-2 ring-indigo-600 ring-offset-2' : 'bg-indigo-100 text-indigo-700 hover:bg-indigo-200'}" do %>
      <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
      </svg>
      Ooit/misschien (<span id="someday-count"><%= @someday_count %></span>)
    <% end %>
    <%= link_to quick_wins_action_items_path, class: "px-3 py-1.5 text-sm font-medium rounded-full inline-flex items-center gap-1 #{@current_filter == :quick_wins ? 'bg-emerald-600 text-white ring-2 ring-emerald-600 ring-offset-2' : 'bg-emerald-100 text-emerald-700 hover:bg-emerald-200'}" do %>
      <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
      </svg>
      Quick wins (<span id="quick-count"><%= @quick_count %></span>)
    <% end %>
    <%= link_to recurring_action_items_path, class: "px-3 py-1.5 text-sm font-medium rounded-full inline-flex items-center gap-1 #{@current_filter == :recurring ? 'bg-cyan-600 text-white ring-2 ring-cyan-600 ring-offset-2' : 'bg-cyan-100 text-cyan-700 hover:bg-cyan-200'}" do %>
      <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"></path>
      </svg>
      Herhalend (<span id="recurring-count"><%= @recurring_count %></span>)
    <% end %>
    <%= link_to filter_inbox_action_items_path, class: "px-3 py-1.5 text-sm font-medium rounded-full inline-flex items-center gap-1 #{@current_filter == :inbox ? 'bg-rose-600 text-white ring-2 ring-rose-600 ring-offset-2' : 'bg-rose-100 text-rose-700 hover:bg-rose-200'}" do %>
      <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 13V6a2 2 0 00-2-2H6a2 2 0 00-2 2v7m16 0v5a2 2 0 01-2 2H6a2 2 0 01-2-2v-5m16 0h-2.586a1 1 0 00-.707.293l-2.414 2.414a1 1 0 01-.707.293h-3.172a1 1 0 01-.707-.293l-2.414-2.414A1 1 0 006.586 13H4"></path>
      </svg>
      Inbox (<span id="inbox-count"><%= @inbox_count %></span>)
    <% end %>
  </div>

  <div class="flex flex-wrap gap-2 mb-6">
    <% TaskContext.ordered.each do |ctx| %>
      <%= link_to "@#{ctx.name}", today_action_items_path(context: ctx.name), class: "px-3 py-1.5 text-sm font-medium rounded-full bg-gray-100 text-gray-700 hover:bg-gray-200" %>
    <% end %>
    <%= link_to settings_contexts_path, class: "px-2 py-1.5 text-gray-400 hover:text-gray-600", title: "Contexts beheren" do %>
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"></path>
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
      </svg>
    <% end %>
  </div>

  <% unless @show_only_completed %>
    <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-4 mb-6">
      <%= form_with model: ActionItem.new, url: action_items_path(filter: @current_filter, from_index: "1"), class: "flex items-center gap-3", data: { controller: "quick-add", action: "turbo:submit-end->quick-add#reset" } do |f| %>
        <%= f.text_field :description, placeholder: "Nieuw actiepunt toevoegen... (Enter om op te slaan)", class: "flex-1 px-3 py-2 text-sm border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent", data: { quick_add_target: "input" } %>
        <% if @filter_label %>
          <span class="text-xs text-gray-400">+ <%= @filter_label %></span>
        <% end %>
      <% end %>
    </div>

    <% if @pending_items.size >= 5 %>
      <%= render "action_items/batching_suggestions", items: @pending_items %>
    <% end %>

    <% if @pending_items.any? %>
      <div class="bg-white rounded-lg shadow-sm border border-gray-200 mb-6">
        <div class="px-4 py-3 border-b border-gray-100 flex items-center justify-between">
          <h2 class="font-semibold text-gray-900">Openstaand (<%= @pending_items.count %>)</h2>
          <% if @current_filter == :today && @today_count > 0 %>
            <div class="flex items-center gap-2">
              <%= link_to power_through_action_items_path, class: "inline-flex items-center gap-1 px-3 py-1.5 text-xs font-medium text-white bg-green-600 hover:bg-green-700 rounded-lg" do %>
                <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
                </svg>
                Power through
              <% end %>
              <%= button_to postpone_today_action_items_path, method: :patch, class: "inline-flex items-center gap-1 px-2 py-1 text-xs font-medium text-gray-600 hover:text-gray-900 hover:bg-gray-100 rounded", data: { turbo_confirm: "Alle #{@today_count} items van vandaag doorschuiven naar morgen?" } do %>
                <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 5l7 7-7 7M5 5l7 7-7 7"></path>
                </svg>
                Naar morgen
              <% end %>
            </div>
          <% end %>
        </div>
        <ul id="action-items-list" class="divide-y divide-gray-100" data-controller="sortable" data-sortable-url-value="<%= reorder_action_items_path %>">
          <% @pending_items.each do |item| %>
            <%= render "action_items/index_item", item: item, return_to: request.path %>
          <% end %>
        </ul>
      </div>
    <% else %>
      <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-8 text-center mb-6">
        <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
        </svg>
        <p class="mt-2 text-gray-500">Geen openstaande actiepunten</p>
      </div>
    <% end %>
  <% end %>

  <% if work_mode? && GithubAccount.exists? %>
    <div class="bg-gradient-to-r from-gray-50 to-white rounded-lg shadow-sm border border-gray-200 border-l-4 border-l-gray-700 mb-6" data-controller="lazy-load" data-lazy-load-url-value="<%= github_dashboard_path %>">
      <div class="px-4 py-3 border-b border-gray-100 flex items-center justify-between">
        <h2 class="font-semibold text-gray-900 flex items-center gap-2">
          <svg class="w-5 h-5 text-gray-700" fill="currentColor" viewBox="0 0 24 24">
            <path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd"></path>
          </svg>
          GitHub
        </h2>
        <div class="flex items-center gap-6">
          <button type="button"
                  data-action="click->lazy-load#refresh"
                  class="text-sm text-gray-600 hover:text-gray-700 inline-flex items-center gap-1">
            <svg class="w-3.5 h-3.5" data-lazy-load-target="spinner" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"></path>
            </svg>
            Vernieuwen
          </button>
          <%= link_to settings_github_accounts_path, class: "text-sm text-gray-600 hover:text-gray-700" do %>
            Beheren
          <% end %>
        </div>
      </div>
      <div data-lazy-load-target="content">
        <div class="flex items-center justify-center py-4">
          <svg class="animate-spin h-5 w-5 text-gray-400" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
            <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
            <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
          </svg>
        </div>
      </div>
    </div>
  <% end %>

  <% if work_mode? && GoogleAccount.exists?(mail_enabled: true) %>
    <div class="bg-gradient-to-r from-red-50 to-white rounded-lg shadow-sm border border-red-200 border-l-4 border-l-red-500 mb-6" data-controller="lazy-load" data-lazy-load-url-value="<%= mail_dashboard_path %>">
      <div class="px-4 py-3 border-b border-red-100 flex items-center justify-between">
        <h2 class="font-semibold text-gray-900 flex items-center gap-2">
          <svg class="w-5 h-5 text-red-500" fill="currentColor" viewBox="0 0 20 20">
            <path d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z"></path>
            <path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z"></path>
          </svg>
          Mail
        </h2>
        <div class="flex items-center gap-6">
          <button type="button"
                  data-action="click->lazy-load#refresh"
                  class="text-sm text-gray-600 hover:text-gray-700 inline-flex items-center gap-1">
            <svg class="w-3.5 h-3.5" data-lazy-load-target="spinner" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"></path>
            </svg>
            Vernieuwen
          </button>
          <%= link_to settings_google_accounts_path, class: "text-sm text-gray-600 hover:text-gray-700" do %>
            Beheren
          <% end %>
        </div>
      </div>
      <div data-lazy-load-target="content">
        <div class="flex items-center justify-center py-4">
          <svg class="animate-spin h-5 w-5 text-gray-400" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
            <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
            <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
          </svg>
        </div>
      </div>
    </div>
  <% end %>

  <% if @pending_reviews&.any? %>
    <div class="bg-gradient-to-r from-blue-50 to-white rounded-lg shadow-sm border border-blue-200 border-l-4 border-l-blue-500 mb-6">
      <div class="px-4 py-3 border-b border-blue-100 flex items-center justify-between">
        <h2 class="font-semibold text-gray-900 flex items-center gap-2">
          <svg class="w-5 h-5 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-6 9l2 2 4-4"></path>
          </svg>
          Reviews
        </h2>
        <%= link_to review_templates_path, class: "text-sm text-blue-600 hover:text-blue-700" do %>
          Beheren
        <% end %>
      </div>
      <ul class="divide-y divide-blue-100">
        <% @pending_reviews.each do |data| %>
          <%
            type_styles = {
              "daily_start" => { bg: "bg-amber-100", text: "text-amber-700", button_bg: "bg-amber-600", button_hover: "hover:bg-amber-700" },
              "daily_end" => { bg: "bg-indigo-100", text: "text-indigo-700", button_bg: "bg-indigo-600", button_hover: "hover:bg-indigo-700" },
              "weekly" => { bg: "bg-blue-100", text: "text-blue-700", button_bg: "bg-blue-600", button_hover: "hover:bg-blue-700" },
              "monthly" => { bg: "bg-purple-100", text: "text-purple-700", button_bg: "bg-purple-600", button_hover: "hover:bg-purple-700" },
              "quarterly" => { bg: "bg-orange-100", text: "text-orange-700", button_bg: "bg-orange-600", button_hover: "hover:bg-orange-700" },
              "yearly" => { bg: "bg-green-100", text: "text-green-700", button_bg: "bg-green-600", button_hover: "hover:bg-green-700" }
            }
            styles = type_styles[data[:type]]
            review = data[:review]
          %>
          <li class="p-4 flex items-center justify-between">
            <div class="flex items-center gap-3">
              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= styles[:bg] %> <%= styles[:text] %>">
                <%= Review::REVIEW_TYPE_LABELS[data[:type]] %>
              </span>
              <span class="text-sm text-gray-600">
                <% if review.in_progress? %>
                  In behandeling (<%= review.progress_percentage %>%)
                <% else %>
                  Nog niet gestart
                <% end %>
              </span>
            </div>
            <% if review.in_progress? %>
              <%= link_to review_path(review), class: "inline-flex items-center gap-1 px-3 py-1.5 #{styles[:button_bg]} #{styles[:button_hover]} text-white text-sm font-medium rounded-lg" do %>
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.752 11.168l-3.197-2.132A1 1 0 0010 9.87v4.263a1 1 0 001.555.832l3.197-2.132a1 1 0 000-1.664z"></path>
                </svg>
                Vervolgen
              <% end %>
            <% elsif review.persisted? %>
              <%= button_to start_review_path(review), method: :post, class: "inline-flex items-center gap-1 px-3 py-1.5 #{styles[:button_bg]} #{styles[:button_hover]} text-white text-sm font-medium rounded-lg cursor-pointer" do %>
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.752 11.168l-3.197-2.132A1 1 0 0010 9.87v4.263a1 1 0 001.555.832l3.197-2.132a1 1 0 000-1.664z"></path>
                </svg>
                Starten
              <% end %>
            <% else %>
              <%= button_to reviews_path(review_type: data[:type]), method: :post, class: "inline-flex items-center gap-1 px-3 py-1.5 #{styles[:button_bg]} #{styles[:button_hover]} text-white text-sm font-medium rounded-lg cursor-pointer" do %>
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
                </svg>
                Starten
              <% end %>
            <% end %>
          </li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= render "action_items/calendar_events", calendar_events: @calendar_events if @calendar_events %>

  <% if @habits&.any? %>
    <div class="bg-gradient-to-r from-green-50 to-white rounded-lg shadow-sm border border-green-200 border-l-4 border-l-green-500 mb-6">
      <div class="px-4 py-3 border-b border-green-100 flex items-center justify-between">
        <h2 class="font-semibold text-gray-900 flex items-center gap-2">
          <svg class="w-5 h-5 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
          Gewoontes
        </h2>
        <%= link_to habits_path, class: "text-sm text-green-600 hover:text-green-700" do %>
          Beheren
        <% end %>
      </div>
      <ul class="divide-y divide-green-100">
        <% @habits.each do |habit| %>
          <li class="px-4 py-3 flex items-center justify-between">
            <div class="flex items-center gap-3">
              <div id="habit_<%= habit.id %>_date_<%= Date.current %>">
                <%= render "habits/habit_checkbox", habit: habit, date: Date.current %>
              </div>
              <span class="text-sm font-medium text-gray-900"><%= habit.name %></span>
            </div>
            <div class="flex items-center gap-3">
              <% if habit.duration_seconds.present? && habit.duration_seconds > 0 %>
                <div data-controller="habit-timer" data-habit-timer-duration-value="<%= habit.duration_seconds %>" data-habit-timer-habit-id-value="<%= habit.id %>" class="flex items-center gap-2">
                  <span data-habit-timer-target="display" class="font-mono text-sm font-medium text-gray-700 w-12 text-center">
                    <%= "#{habit.duration_seconds / 60}:#{(habit.duration_seconds % 60).to_s.rjust(2, '0')}" %>
                  </span>
                  <button type="button" data-habit-timer-target="startButton" data-action="click->habit-timer#start" class="inline-flex items-center gap-1 px-2 py-1 text-xs font-medium text-white bg-green-600 rounded hover:bg-green-700">
                    <svg class="w-3 h-3" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM9.555 7.168A1 1 0 008 8v4a1 1 0 001.555.832l3-2a1 1 0 000-1.664l-3-2z" clip-rule="evenodd"></path>
                    </svg>
                  </button>
                  <button type="button" data-habit-timer-target="cancelButton" data-action="click->habit-timer#cancel" class="hidden px-2 py-1 text-xs font-medium text-gray-700 bg-gray-200 rounded hover:bg-gray-300">
                    Annuleren
                  </button>
                </div>
              <% end %>
              <% if habit.current_streak > 0 %>
                <span class="inline-flex items-center gap-1 px-2 py-0.5 rounded-full bg-orange-100 text-orange-700 text-xs font-medium">
                  ğŸ”¥ <%= habit.current_streak %>
                </span>
              <% end %>
            </div>
          </li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <% if @completed_items.any? %>
    <div class="bg-white rounded-lg shadow-sm border border-gray-200">
      <div class="px-4 py-3 border-b border-gray-100">
        <h2 class="font-semibold text-gray-700"><%= @current_filter == :yesterday ? "Afgerond gisteren" : "Recent afgerond" %></h2>
      </div>
      <ul id="completed-items-list" class="divide-y divide-gray-100">
        <% @completed_items.each do |item| %>
          <%= render "action_items/completed_index_item", item: item, return_to: request.path %>
        <% end %>
      </ul>
    </div>
  <% elsif @current_filter == :yesterday %>
    <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-8 text-center">
      <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
      </svg>
      <p class="mt-2 text-gray-500">Geen actiepunten afgerond gisteren</p>
    </div>
  <% end %>
</div>
