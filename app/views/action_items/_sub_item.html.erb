<li id="<%= dom_id(child) %>" class="flex items-start space-x-3 py-1.5 px-3 rounded-lg hover:bg-gray-50 group"
    <%= "draggable=true data-sortable-id=#{child.id}".html_safe unless child.completed? %>>
  <% unless child.completed? %>
    <div class="flex-shrink-0 mt-0.5 cursor-grab opacity-0 group-hover:opacity-100 transition-opacity text-gray-300 hover:text-gray-500" data-drag-handle>
      <svg class="w-3 h-3 pointer-events-none" fill="currentColor" viewBox="0 0 24 24">
        <circle cx="9" cy="6" r="1.5"></circle>
        <circle cx="15" cy="6" r="1.5"></circle>
        <circle cx="9" cy="12" r="1.5"></circle>
        <circle cx="15" cy="12" r="1.5"></circle>
        <circle cx="9" cy="18" r="1.5"></circle>
        <circle cx="15" cy="18" r="1.5"></circle>
      </svg>
    </div>
  <% end %>
  <%= button_to toggle_action_item_path(child), method: :patch, class: "flex-shrink-0 mt-0.5", form: { data: { turbo_stream: true } } do %>
    <% if child.completed? %>
      <svg class="w-4 h-4 text-green-500" fill="currentColor" viewBox="0 0 20 20">
        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
      </svg>
    <% else %>
      <svg class="w-4 h-4 text-gray-300 group-hover:text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <circle cx="12" cy="12" r="10" stroke-width="2"></circle>
      </svg>
    <% end %>
  <% end %>
  <div class="flex-1 min-w-0">
    <%= link_to child, class: "block text-sm #{child.completed? ? 'text-gray-400 line-through' : 'text-gray-900 hover:text-blue-600'}", data: { turbo_frame: "_top" } do %>
      <%= child.description %>
    <% end %>
    <% if child.due_date.present? && !child.completed? %>
      <span class="text-xs <%= child.overdue? ? 'text-red-600 font-medium' : 'text-gray-500' %>">
        <%= child.due_date.strftime("%d-%m-%Y") %>
      </span>
    <% end %>
  </div>
  <div class="flex items-center gap-2 opacity-0 group-hover:opacity-100 transition-opacity">
    <%= link_to edit_action_item_path(child, return_to: request.path), class: "text-gray-400 hover:text-blue-600", data: { turbo_frame: "_top" } do %>
      <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
      </svg>
    <% end %>
    <%= button_to action_item_path(child), method: :delete, class: "text-gray-400 hover:text-red-600", form: { data: { turbo_stream: true } }, data: { turbo_confirm: "Weet je zeker dat je dit sub-item wilt verwijderen?" } do %>
      <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
      </svg>
    <% end %>
  </div>
</li>
