<div class="max-w-6xl mx-auto">
  <div class="flex items-center justify-between mb-6">
    <div class="flex items-center gap-3">
      <%= link_to number_action_items_path(@prev_week), class: "p-1.5 rounded-lg text-gray-400 hover:text-gray-700 hover:bg-gray-100 transition-colors" do %>
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
        </svg>
      <% end %>
      <div>
        <h1 class="text-2xl font-bold text-gray-900">Week <%= @week_number %></h1>
        <p class="text-sm text-gray-500 mt-1">
          <%= l(@start_date, format: "%-d %B") %> - <%= l(@end_date, format: "%-d %B %Y") %>
        </p>
      </div>
      <%= link_to number_action_items_path(@next_week), class: "p-1.5 rounded-lg text-gray-400 hover:text-gray-700 hover:bg-gray-100 transition-colors" do %>
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
        </svg>
      <% end %>
    </div>
    <div class="flex items-center gap-4">
      <div class="flex items-center gap-6 text-sm">
        <span class="flex items-center gap-2">
          <span class="w-3 h-3 rounded-full bg-blue-500"></span>
          <span class="text-gray-600"><%= @total_events %> agenda-items</span>
        </span>
        <span class="flex items-center gap-2">
          <span class="w-3 h-3 rounded-full bg-green-500"></span>
          <span class="text-gray-600"><%= @total_tasks %> taken</span>
        </span>
      </div>
      <%= link_to current_month_action_items_path, class: "text-sm text-gray-600 hover:text-gray-900" do %>
        Maandoverzicht &rarr;
      <% end %>
    </div>
  </div>

  <div class="grid grid-cols-1 lg:grid-cols-2 gap-4">
    <% @days.each do |day| %>
      <% events = @calendar_events_by_date[day] || [] %>
      <% tasks = @action_items_by_date[day] || [] %>
      <% is_weekend = day.wday.in?([0, 6]) %>

      <div class="bg-white rounded-lg shadow-sm border <%= is_weekend ? 'border-gray-200 bg-gray-50' : 'border-gray-200' %> overflow-hidden">
        <div class="px-4 py-3 border-b border-gray-100 <%= is_weekend ? 'bg-gray-100' : 'bg-gradient-to-r from-blue-50 to-white' %>">
          <div class="flex items-center justify-between">
            <h2 class="font-semibold text-gray-900">
              <%= l(day, format: "%A") %>
              <span class="font-normal text-gray-500"><%= l(day, format: "%-d %B") %></span>
            </h2>
            <div class="flex items-center gap-2">
              <% if events.any? %>
                <span class="inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-700">
                  <%= events.size %> event<%= 's' if events.size != 1 %>
                </span>
              <% end %>
              <% if tasks.any? %>
                <span class="inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-700">
                  <%= tasks.size %> ta<%= tasks.size == 1 ? 'ak' : 'ken' %>
                </span>
              <% end %>
            </div>
          </div>
        </div>

        <div class="divide-y divide-gray-100">
          <% if events.empty? && tasks.empty? %>
            <div class="px-4 py-6 text-center text-sm text-gray-400">
              <svg class="mx-auto h-8 w-8 text-gray-300 mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
              </svg>
              Geen items gepland
            </div>
          <% else %>
            <%# Calendar events %>
            <% events.each do |event| %>
              <div class="px-4 py-2 hover:bg-blue-50 transition-colors">
                <div class="flex items-start gap-3">
                  <div class="flex-shrink-0 mt-0.5">
                    <svg class="w-4 h-4 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                    </svg>
                  </div>
                  <div class="flex-1 min-w-0">
                    <div class="flex items-center gap-2">
                      <% if event[:start_time] && !event[:all_day] %>
                        <span class="text-xs font-medium text-blue-600 bg-blue-50 px-1.5 py-0.5 rounded">
                          <%= event[:start_time].strftime("%H:%M") %>
                        </span>
                      <% elsif event[:all_day] %>
                        <span class="text-xs font-medium text-blue-600 bg-blue-50 px-1.5 py-0.5 rounded">
                          Hele dag
                        </span>
                      <% end %>
                      <span class="text-sm font-medium text-gray-900 truncate"><%= event[:title] %></span>
                    </div>
                    <% if event[:location].present? %>
                      <p class="text-xs text-gray-500 truncate mt-0.5">
                        <svg class="w-3 h-3 inline mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                        </svg>
                        <%= event[:location] %>
                      </p>
                    <% end %>
                  </div>
                </div>
              </div>
            <% end %>

            <%# Action items %>
            <% tasks.each do |item| %>
              <div class="px-4 py-2 hover:bg-green-50 transition-colors">
                <div class="flex items-start gap-3">
                  <div class="flex-shrink-0 mt-0.5">
                    <svg class="w-4 h-4 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                  </div>
                  <div class="flex-1 min-w-0">
                    <%= link_to item, class: "block text-sm text-gray-900 hover:text-green-600 transition-colors" do %>
                      <span class="font-medium"><%= item.description.split(/\n\s*\n/).first.truncate(100) %></span>
                    <% end %>
                    <div class="flex items-center gap-2 mt-0.5">
                      <% if item.dossier.present? %>
                        <span class="text-xs text-blue-600"><%= item.dossier.name %></span>
                      <% end %>
                      <% if item.context.present? %>
                        <span class="text-xs text-teal-600">@<%= item.context %></span>
                      <% end %>
                      <% if item.estimated_minutes.present? %>
                        <span class="text-xs text-gray-400"><%= item.estimated_minutes %> min</span>
                      <% end %>
                    </div>
                  </div>
                </div>
              </div>
            <% end %>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>

  <%# Recurring items section %>
  <% if @recurring_items.any? %>
    <div class="mt-6 bg-white rounded-lg shadow-sm border border-purple-200 overflow-hidden">
      <div class="px-4 py-3 border-b border-purple-100 bg-gradient-to-r from-purple-50 to-white">
        <h2 class="font-semibold text-gray-900 flex items-center gap-2">
          <svg class="w-5 h-5 text-purple-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"></path>
          </svg>
          Terugkerende taken
        </h2>
        <p class="text-xs text-gray-500 mt-1">Deze taken komen regelmatig terug en kunnen volgende week ook relevant zijn</p>
      </div>
      <div class="divide-y divide-gray-100">
        <% @recurring_items.group_by(&:recurrence).each do |recurrence, items| %>
          <div class="px-4 py-3">
            <h3 class="text-xs font-medium text-purple-600 uppercase tracking-wide mb-2">
              <%= { 'daily' => 'Dagelijks', 'workdays' => 'Werkdagen', 'weekly' => 'Wekelijks', 'monthly' => 'Maandelijks', 'quarterly' => 'Per kwartaal', 'yearly' => 'Jaarlijks' }[recurrence] %>
            </h3>
            <ul class="space-y-1">
              <% items.each do |item| %>
                <li class="flex items-center gap-2 text-sm">
                  <svg class="w-3.5 h-3.5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <circle cx="12" cy="12" r="10" stroke-width="2"></circle>
                  </svg>
                  <%= link_to item, class: "text-gray-700 hover:text-purple-600" do %>
                    <%= item.description.split(/\n\s*\n/).first.truncate(80) %>
                  <% end %>
                  <% if item.dossier.present? %>
                    <span class="text-xs text-blue-600">(<%= item.dossier.name %>)</span>
                  <% end %>
                </li>
              <% end %>
            </ul>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
