<div class="max-w-2xl mx-auto">
  <div class="mb-6">
    <div class="flex items-center space-x-2 text-sm text-gray-500 mb-1">
      <%= link_to "Actiepunten", @return_to.presence || action_items_path, class: "hover:text-gray-700" %>
      <span>/</span>
    </div>
    <h1 class="text-2xl font-bold text-gray-900">Actiepunt bewerken</h1>
  </div>

  <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
    <%= form_with model: @action_item, class: "space-y-4" do |f| %>
      <%= hidden_field_tag :return_to, @return_to if @return_to.present? %>
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-1">Beschrijving</label>
        <%= f.text_area :description, rows: 3, class: "w-full px-3 py-2 text-sm border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent", data: { controller: "markdown-paste" } %>
      </div>

      <div class="grid grid-cols-4 gap-4">
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">Deadline</label>
          <%= f.date_field :due_date, class: "w-full px-3 py-2 text-sm border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
        </div>

        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">Context</label>
          <%= render "shared/context_select", field_name: "action_item[context]", selected: @action_item.context %>
        </div>

        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">Tijdsduur</label>
          <%= f.select :estimated_minutes, ActionItem::DURATION_OPTIONS, { include_blank: "Onbekend" }, class: "w-full px-3 py-2 text-sm border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
        </div>

        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">Herhaling</label>
          <%= f.select :recurrence, [["Eenmalig", nil], ["Dagelijks", "daily"], ["Werkdagen", "workdays"], ["Wekelijks", "weekly"], ["Maandelijks", "monthly"], ["Per kwartaal", "quarterly"], ["Jaarlijks", "yearly"]], {}, class: "w-full px-3 py-2 text-sm border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
        </div>
      </div>

      <div>
        <label class="block text-sm font-medium text-gray-700 mb-1">Dossier</label>
        <%= render "shared/dossier_select",
                   field_name: "action_item[dossier_id]",
                   selected_id: @action_item.dossier_id,
                   include_blank: "Inbox (geen dossier)",
                   show_all: true %>
      </div>

      <div class="grid grid-cols-2 gap-4">
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">Wacht op (partij)</label>
          <%= f.select :waiting_for_party_id, [["Geen", nil]] + Party.order(:name).map { |p| [p.name, p.id] }, {}, class: "w-full px-3 py-2 text-sm border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
        </div>
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">Wacht op (vrije tekst)</label>
          <%= f.text_field :waiting_for_description, placeholder: "Bijv. 'reactie leverancier'", class: "w-full px-3 py-2 text-sm border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
          <p class="text-xs text-gray-500 mt-1">Gebruik dit als de partij niet in het systeem staat</p>
        </div>
      </div>

      <div class="flex items-center gap-2">
        <%= f.check_box :someday, class: "w-4 h-4 text-indigo-600 border-gray-300 rounded focus:ring-indigo-500" %>
        <%= f.label :someday, "Ooit/misschien", class: "text-sm font-medium text-gray-700" %>
        <span class="text-xs text-gray-500">- Parkeer dit actiepunt voor later</span>
      </div>

      <div class="flex items-center gap-2">
        <%= f.check_box :next_action, class: "w-4 h-4 text-gray-900 border-gray-300 rounded focus:ring-gray-500" %>
        <%= f.label :next_action, "Eerstvolgende actie", class: "text-sm font-medium text-gray-700" %>
        <span class="text-xs text-gray-500">- Markeer als eerstvolgende actie voor dit project</span>
      </div>

      <div class="flex items-center justify-between pt-4 border-t border-gray-100">
        <div>
          <%= button_to action_item_path(@action_item), method: :delete, class: "text-red-600 hover:text-red-800 text-sm font-medium", data: { turbo_confirm: "Weet je zeker dat je dit actiepunt wilt verwijderen?" } do %>
            Verwijderen
          <% end %>
        </div>
        <div class="flex items-center gap-3">
          <%= link_to "Annuleren", @return_to.presence || action_items_path, class: "px-4 py-2 text-sm font-medium text-gray-700 hover:text-gray-900" %>
          <%= f.submit "Opslaan", class: "px-4 py-2 bg-blue-600 text-white text-sm font-medium rounded-lg hover:bg-blue-700 transition-colors cursor-pointer" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
