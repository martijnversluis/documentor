<% suggestions = batching_suggestions(items) %>
<% if suggestions.any? %>
  <div class="bg-gradient-to-r from-purple-50 to-indigo-50 rounded-lg border border-purple-100 p-4 mb-6">
    <div class="flex items-center gap-2 mb-3">
      <svg class="w-5 h-5 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"></path>
      </svg>
      <h3 class="font-medium text-purple-900">Slim batchen</h3>
    </div>
    <div class="space-y-2">
      <% suggestions.first(3).each do |suggestion| %>
        <details class="group">
          <summary class="flex items-center gap-3 cursor-pointer list-none p-2 -m-2 rounded hover:bg-purple-100/50">
            <span class="text-purple-600"><%= batch_icon(suggestion[:icon]) %></span>
            <span class="flex-1 text-sm text-purple-900"><%= suggestion[:title] %></span>
            <span class="text-xs text-purple-600 font-medium"><%= format_batch_time(suggestion[:total_time]) %></span>
            <svg class="w-4 h-4 text-purple-400 transition-transform group-open:rotate-180" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
            </svg>
          </summary>
          <div class="mt-2 pl-8 text-sm text-purple-700">
            <p class="mb-2"><%= suggestion[:description] %></p>
            <ul class="space-y-1">
              <% suggestion[:items].first(5).each do |item| %>
                <li class="flex items-center gap-2">
                  <span class="w-1.5 h-1.5 rounded-full bg-purple-400"></span>
                  <%= link_to item.description.truncate(50), item, class: "hover:text-purple-900 hover:underline" %>
                  <% if item.estimated_minutes %>
                    <span class="text-xs text-purple-500">(<%= item.estimated_minutes %> min)</span>
                  <% end %>
                </li>
              <% end %>
              <% if suggestion[:items].size > 5 %>
                <li class="text-purple-500 text-xs">+ <%= suggestion[:items].size - 5 %> meer...</li>
              <% end %>
            </ul>
          </div>
        </details>
      <% end %>
    </div>
  </div>
<% end %>
