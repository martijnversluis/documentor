<%= turbo_frame_tag "modal" do %>
  <div class="fixed inset-0 bg-gray-500 bg-opacity-75 flex items-center justify-center z-50">
    <div class="bg-white rounded-lg shadow-xl max-w-lg w-full mx-4">
      <div class="p-6">
        <h2 class="text-lg font-semibold text-gray-900 mb-4">Document toevoegen aan inbox</h2>

        <%= form_with model: @document, url: inbox_documents_path, class: "space-y-4", data: { controller: "file-upload", turbo_frame: "_top" } do |f| %>
          <div>
            <%= f.label :file, "Bestand", class: "block text-sm font-medium text-gray-700 mb-1" %>
            <div class="mt-1 flex justify-center px-6 pt-5 pb-6 border-2 border-gray-300 border-dashed rounded-lg hover:border-gray-400 transition-colors" data-file-upload-target="dropzone" data-action="dragover->file-upload#dragover dragenter->file-upload#dragenter dragleave->file-upload#dragleave drop->file-upload#drop">
              <div class="space-y-1 text-center">
                <svg class="mx-auto h-12 w-12 text-gray-400" stroke="currentColor" fill="none" viewBox="0 0 48 48">
                  <path d="M28 8H12a4 4 0 00-4 4v20m32-12v8m0 0v8a4 4 0 01-4 4H12a4 4 0 01-4-4v-4m32-4l-3.172-3.172a4 4 0 00-5.656 0L28 28M8 32l9.172-9.172a4 4 0 015.656 0L28 28m0 0l4 4m4-24h8m-4-4v8m-12 4h.02" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
                </svg>
                <div class="flex text-sm text-gray-600">
                  <label class="relative cursor-pointer bg-white rounded-md font-medium text-blue-600 hover:text-blue-500">
                    <span>Selecteer een bestand</span>
                    <%= f.file_field :file, class: "sr-only", data: { file_upload_target: "input", action: "change->file-upload#change" } %>
                  </label>
                  <p class="pl-1">of sleep hier</p>
                </div>
                <p class="text-xs text-gray-500" data-file-upload-target="filename">PDF, Word, afbeeldingen, etc.</p>
              </div>
            </div>
          </div>

          <div>
            <%= f.label :name, "Naam", class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= f.text_field :name, class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent", placeholder: "Wordt automatisch ingevuld", data: { file_upload_target: "name" } %>
          </div>

          <div>
            <%= f.label :occurred_at, "Datum", class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= f.datetime_local_field :occurred_at, value: Date.today.strftime("%Y-%m-%dT00:00"), class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent", data: { file_upload_target: "date" } %>
          </div>

          <div class="flex justify-end space-x-3 pt-4">
            <%= link_to "Annuleren", inbox_path, class: "px-4 py-2 text-sm font-medium text-gray-700 hover:text-gray-900" %>
            <%= f.submit "Toevoegen", class: "px-4 py-2 bg-blue-600 text-white font-medium rounded-lg hover:bg-blue-700 transition-colors cursor-pointer" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
<% end %>
